python3.8 -m venv env
source env/bin/activate
pip install django
pip install gunicorn
# https://pyjwt.readthedocs.io/en/latest/usage.html
pip install pyjwt
# https://firebase.google.com/docs/admin/setup#linux-or-macos
pip install firebase-admin
gunicorn --bind 103.221.220.249:8082 pos_api_project.wsgi:application

sudo nano /etc/systemd/system/gunicorn_pos_api.service
------------------------------------
[Unit]
Description=gunicorn_pos_api daemon
After=network.target

[Service]
User=admin
Group=admin
WorkingDirectory=/home/admin/pos/pos-api/pos_api_project
ExecStart=/home/admin/pos/pos-api/pos_api_project/env/bin/gunicorn --bind 103.221.220.249:8082 pos_api_project.wsgi:application

[Install]
WantedBy=multi-user.target


------------------------------------

sudo systemctl start gunicorn_pos_api
sudo systemctl stop gunicorn_pos_api
sudo systemctl enable gunicorn_pos_api
sudo systemctl disable gunicorn_pos_api

sudo systemctl status gunicorn_pos_api
